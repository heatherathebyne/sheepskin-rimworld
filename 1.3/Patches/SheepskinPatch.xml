<?xml version="1.0" encoding="utf-8" ?>

<Patch>
  <Operation Class="PatchOperationReplace">
    <xpath>/Defs/ThingDef[defName="Sheep"]/race/leatherDef</xpath>
    <value>
      <leatherDef>Leather_Sheepskin</leatherDef>
    </value>
  </Operation>

  <Operation Class="PatchOperationAdd">
    <xpath>/Defs/ThingDef[@ParentName = "BedWithQualityBase" or @ParentName = "ArtableBedBase"]/comps/li[@Class = "CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
    <value>
      <li>Sheepskin_Rug</li>
    </value>
  </Operation>
</Patch>
